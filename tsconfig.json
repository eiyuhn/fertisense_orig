{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,               // <— avoids noise from dependency .d.ts
    "paths": { "@/*": ["./*"] },
    "types": ["react", "react-native"]  // <— keep TS focused on RN/React types
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}

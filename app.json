{
  "expo": {
    "name": "FertiSense",
    "slug": "fertisense",
    "scheme": "fertisense",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/fertisense-logo.png",
    "splash": {
      "image": "./assets/images/splash-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-wifi-reborn",
        {
          "isLocationRequired": true
        }
      ]
    ],
    "android": {
      "package": "com.iannnn.fertisense",
    
      "usesCleartextTraffic": true,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_STATE",
        "android.permission.NEARBY_WIFI_DEVICES",
        "android.permission.ACCESS_NETWORK_STATE",  
        "android.permission.CHANGE_NETWORK_STATE" 
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/fertisense-logo.png",
        "backgroundColor": "#ffffff"
      }
    },
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Location access is needed to help connect to the ESP32 sensor Wi-Fi.",
        
   
        "NSLocalNetworkUsageDescription": "FertiSense needs to connect to the NPK sensor over your local Wi-Fi.",
   
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
        
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "extra": {
      "eas": {
        "projectId": "dd95e93f-f51a-4d97-9db6-35d9c765e290"
      }
    }
  }
}

